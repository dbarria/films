<p id="notice"><%= notice %></p>

<h1>Listing People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Birthdate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dudes.each do |dude| %>
      <tr>
        <td><%= dude.name %></td>
        <td><%= dude.birthdate %></td>
        <td><%= link_to 'Show', dude %></td>
        <td><%= link_to 'Edit', edit_dude_path(dude) %></td>
        <td><%= link_to 'Destroy', dude, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

